<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/menu_toolbar" />

        <LinearLayout android:id="@+id/activity_mapa"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/menu_principal"
        app:menu="@menu/principal"/>

    <!--
      >> NOTA:
      >>
      >> Usar la siguiente linea en el elemento NavigationView anterior para esconder el menú
      >> principal en la vista previa de Android Studio.
      >>
      >>     tools:visibility="invisible"
      >>
      >> Remueva dicha linea para hacer el menú principal visible en la vista previa.
      -->

</android.support.v4.widget.DrawerLayout>
